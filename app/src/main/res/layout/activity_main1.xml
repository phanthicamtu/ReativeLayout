<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Top Content Here"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="#8F2A20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:id="@+id/text_view_second"
        android:text="Second"
        android:textSize="30sp"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:background="#2196F3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:id="@+id/text_view_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/text_view_second"
        android:background="#4CAF50"
        android:layout_margin="20dp"
        android:text="First"
        android:textColor="@color/white"
        android:textSize="30sp">

    </TextView>
    <TextView
        android:id="@+id/text_view_three"
        android:text="Three"
        android:textSize="30sp"
        android:layout_toEndOf="@id/text_view_second"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:background="#CDDC39"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:text="Bottom Content Here"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:background="#255A601C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

</RelativeLayout>